	.logo {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		font-weight: 700;
		font-size: 1.25rem;
		color: var(--gray-900);
		overflow: hidden;
	}

	.logo img {
		height: 50px;
		width: 200px;
		object-fit: cover;
		object-position: center;
		transform: scale(2);
		transform-origin: 50% center;
		overflow: hidden;
	}

	.nav-links {
		display: flex;
		gap: 2rem;
	}

	.nav-links a {
		color: var(--gray-600);
		text-decoration: none;
		font-weight: 500;
		font-size: 0.95rem;
		transition: color 0.2s ease;
	}

	.nav-links a:hover {
		color: var(--primary-600);
	}

	/* Hero Section */
	.hero {
		position: relative;
		padding: 4rem 0 8rem;
		overflow: hidden;
		background: linear-gradient(
			135deg,
			var(--primary-900) 0%,
			var(--primary-700) 50%,
			var(--primary-600) 100%
		);
	}

	.hero-background {
		position: absolute;
		inset: 0;
		opacity: 0.1;
	}

	.hero-pattern {
		position: absolute;
		inset: 0;
		background-image: radial-gradient(
				circle at 25% 25%,
				white 2px,
				transparent 2px
			),
			radial-gradient(circle at 75% 75%, white 2px, transparent 2px);
		background-size: 50px 50px;
		background-position:
			0 0,
			25px 25px;
	}

	.hero-content {
		position: relative;
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: start;
		color: white;
		padding: 0;
	}

	.hero-info {
		text-align: left;
	}

	.hero-badge {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		background: rgba(255, 255, 255, 0.15);
		backdrop-filter: blur(10px);
		padding: 0.75rem 1.5rem;
		border-radius: 50px;
		font-size: 0.875rem;
		font-weight: 600;
		margin-bottom: 2rem;
		border: 1px solid rgba(255, 255, 255, 0.2);
	}

	.badge-icon {
		font-size: 1rem;
	}

	.hero-title {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 800;
		line-height: 1.1;
		margin-bottom: 1.5rem;
		letter-spacing: -0.02em;
	}

	.gradient-text {
		background: linear-gradient(135deg, #fbbf24, #f59e0b);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.hero-subtitle {
		font-size: 1.5rem;
		font-weight: 400;
		opacity: 0.9;
		margin-bottom: 3rem;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
	}

	.event-details {
		display: grid;
		grid-template-columns: 1fr;
		gap: 1rem;
		margin-bottom: 2rem;
	}

	.detail-card {
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(10px);
		padding: 1.5rem;
		border-radius: 1rem;
		border: 1px solid rgba(255, 255, 255, 0.2);
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.detail-icon {
		color: #fbbf24;
		flex-shrink: 0;
	}

	.detail-text {
		display: flex;
		flex-direction: column;
		text-align: left;
	}

	.detail-label {
		font-size: 0.875rem;
		opacity: 0.8;
		font-weight: 500;
	}

	.detail-value {
		font-size: 1rem;
		font-weight: 600;
	}

	.cta-primary {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		background: linear-gradient(135deg, #fbbf24, #f59e0b);
		color: var(--gray-900);
		padding: 1rem 2rem;
		border-radius: 0.75rem;
		font-weight: 600;
		font-size: 1.125rem;
		text-decoration: none;
		transition: all 0.3s ease;
		box-shadow: var(--shadow-lg);
	}

	.cta-primary:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-2xl);
	}

	/* Trust Badges in Hero */
	.trust-badges-hero {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
		margin-top: 2rem;
	}

	.trust-badge {
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(10px);
		padding: 0.5rem 1rem;
		border-radius: 0.5rem;
		border: 1px solid rgba(255, 255, 255, 0.2);
		font-size: 0.875rem;
		font-weight: 500;
	}

	/* Hero Form Container */
	.hero-form-container {
		background: white;
		padding: 2.5rem;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-2xl);
		color: var(--gray-900);
	}

	.hero-registration-form .form-header {
		text-align: center;
		margin-bottom: 2rem;
	}

	.hero-registration-form .form-header h3 {
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--gray-900);
		margin-bottom: 0.5rem;
	}

	.hero-registration-form .form-header p {
		color: var(--gray-600);
		font-size: 0.95rem;
	}

	/* Main Content */
	.main-content {
		background: var(--gray-50);
	}

	.section {
		padding: 6rem 0;
	}

	.section-header {
		text-align: center;
		margin-bottom: 4rem;
		max-width: 800px;
		margin-left: auto;
		margin-right: auto;
	}

	.section-title {
		font-size: 2.5rem;
		font-weight: 800;
		color: var(--gray-900);
		margin-bottom: 1rem;
		letter-spacing: -0.02em;
	}

	.section-subtitle {
		font-size: 1.25rem;
		color: var(--gray-600);
		font-weight: 400;
	}

	.urgency-text {
		color: #dc2626;
		font-weight: 600;
		font-size: 1.1rem;
		display: inline-block;
		margin-top: 0.5rem;
	}

	/* Secciones Separadas */
	.section-separated {
		padding: 5rem 0;
		position: relative;
	}

	.section-separated:nth-child(even) {
		background: var(--gray-50);
		margin: 0 -2rem;
		padding: 5rem 2rem;
	}

	.section-separated:nth-child(odd) {
		background: var(--gray-50);
	}

	.section-separated-header {
		text-align: center;
		margin-bottom: 4rem;
		position: relative;
	}

	.section-separated-title {
		font-size: clamp(2.5rem, 5vw, 3.5rem);
		font-weight: 800;
		color: var(--gray-900);
		margin-bottom: 1rem;
		line-height: 1.2;
		letter-spacing: -0.02em;
		position: relative;
		display: inline-block;
	}

	.section-separated-title::after {
		content: "";
		position: absolute;
		bottom: -0.5rem;
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
		height: 4px;
		background: linear-gradient(
			135deg,
			var(--primary-600),
			var(--primary-400)
		);
		border-radius: 2px;
	}

	/* Sección de beneficios principal */
	.benefits-main-section {
		background: linear-gradient(
			135deg,
			var(--primary-50) 0%,
			var(--primary-100) 100%
		) !important;
		margin: 0 -2rem !important;
		padding: 5rem 2rem !important;
	}

	.benefits-main-section .section-separated-title {
		background: linear-gradient(
			135deg,
			var(--primary-700),
			var(--primary-500)
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.content-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 3rem;
		margin-bottom: 4rem;
	}

	.info-panel {
		background: white;
		padding: 2.5rem;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
		border: 1px solid var(--gray-200);
		transition: all 0.3s ease;
	}

	.info-panel:hover {
		transform: translateY(-4px);
		box-shadow: var(--shadow-xl);
	}

	.panel-icon {
		margin-bottom: 1.5rem;
	}

	.info-panel h3 {
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--gray-900);
		margin-bottom: 1rem;
	}

	.info-panel p {
		color: var(--gray-600);
		line-height: 1.7;
	}

	.benefits-section {
		grid-column: 1 / -1;
		background: white;
		padding: 3rem;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
		border: 1px solid var(--gray-200);
	}

	.benefits-title {
		font-size: 1.75rem;
		font-weight: 700;
		color: var(--gray-900);
		margin-bottom: 2rem;
		text-align: center;
	}

	/* Timeline Section */
	.timeline-section {
		margin-bottom: 5rem;
	}

	.timeline-title {
		font-size: 2rem;
		font-weight: 700;
		color: var(--gray-900);
		margin-bottom: 3rem;
		text-align: center;
	}

	.timeline-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-bottom: 3rem;
	}

	.timeline-item {
		background: white;
		padding: 2rem;
		border-radius: 1rem;
		border-left: 4px solid var(--primary-500);
		box-shadow: var(--shadow-md);
		transition: all 0.3s ease;
	}

	.timeline-item.urgent {
		border-left-color: #dc2626;
		background: #fef2f2;
	}

	.timeline-item:hover {
		transform: translateY(-4px);
		box-shadow: var(--shadow-xl);
	}

	.timeline-date {
		font-size: 0.875rem;
		font-weight: 600;
		color: var(--primary-600);
		text-transform: uppercase;
		letter-spacing: 0.05em;
		margin-bottom: 0.5rem;
	}

	.timeline-item.urgent .timeline-date {
		color: #dc2626;
	}

	.timeline-content h4 {
		font-size: 1.25rem;
		font-weight: 700;
		color: var(--gray-900);
		margin-bottom: 0.5rem;
	}

	.timeline-content p {
		color: var(--gray-600);
		line-height: 1.5;
	}

	/* Expert Advice Panel */
	.expert-advice {
		background: linear-gradient(135deg, #fef3c7, #fbbf24);
		border: 2px solid #f59e0b;
	}

	.expert-advice h3 {
		color: #92400e;
	}

	.expert-advice p {
		color: #92400e;
		font-weight: 500;
	}

	.expert-checklist {
		margin-top: 1rem;
	}

	.checklist-item {
		color: #92400e;
		font-weight: 500;
		margin: 0.5rem 0;
		font-size: 0.875rem;
	}

	/* Bento Grid */
	.bento-grid {
		display: grid;
		grid-template-columns: repeat(12, 1fr);
		grid-template-rows: repeat(3, minmax(160px, auto));
		gap: 1.5rem;
		max-width: 1200px;
		margin: 0 auto;
	}

	.bento-item {
		background: white;
		border-radius: 1.5rem;
		padding: 2rem;
		box-shadow: var(--shadow-lg);
		border: 1px solid rgba(59, 130, 246, 0.1);
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
	}

	.bento-item:hover {
		transform: translateY(-4px);
		box-shadow: var(--shadow-2xl);
		border-color: var(--primary-300);
	}

	.bento-item::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 4px;
		background: linear-gradient(
			90deg,
			var(--primary-500),
			var(--primary-300)
		);
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.bento-item:hover::before {
		opacity: 1;
	}

	.bento-medium {
		grid-column: span 4;
		grid-row: span 1;
	}

	.bento-highlight {
		grid-column: span 8;
		grid-row: span 1;
		background: linear-gradient(135deg, var(--primary-600), var(--primary-500));
		color: white;
	}

	.bento-small {
		grid-column: span 4;
		grid-row: span 1;
	}

	.bento-wide {
		grid-column: span 8;
		grid-row: span 1;
	}

	.bento-image {
		grid-column: span 6;
		grid-row: span 2;
		padding: 0;
		overflow: hidden;
	}

	.bento-image-container {
		width: 100%;
		height: 100%;
		position: relative;
	}

	.bento-image-container img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
		transition: transform 0.3s ease;
	}

	.bento-image:hover .bento-image-container img {
		transform: scale(1.05);
	}

	/* Content Styles */
	.bento-content {
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
	}

	.bento-icon {
		font-size: 2.5rem;
		margin-bottom: 1rem;
		display: block;
	}

	.bento-icon-img {
		width: 48px;
		height: 48px;
		margin-bottom: 1.5rem;
		display: flex;
		align-items: center;
		justify-content: center;
		background: var(--primary-50);
		border-radius: 12px;
		padding: 12px;
	}

	.bento-icon-img img {
		width: 24px;
		height: 24px;
		opacity: 0.8;
	}

	.bento-highlight .bento-icon-img {
		background: rgba(255, 255, 255, 0.15);
	}

	.bento-highlight .bento-icon-img img {
		filter: brightness(0) invert(1);
		opacity: 0.9;
	}

	.bento-title {
		font-size: 1.4rem;
		font-weight: 700;
		color: var(--gray-900);
		margin-bottom: 1rem;
		line-height: 1.3;
	}

	.bento-highlight .bento-title {
		color: white;
	}

	.bento-description {
		color: var(--gray-600);
		line-height: 1.6;
		font-size: 1rem;
	}

	.bento-highlight .bento-description {
		color: rgba(255, 255, 255, 0.9);
	}

	.bento-price {
		font-size: 2.5rem;
		font-weight: 900;
		color: white;
		margin: 0.5rem 0;
		line-height: 1;
	}

	/* Small items special styling */
	.bento-small .bento-content {
		justify-content: center;
		text-align: center;
	}

	.bento-small .bento-icon {
		font-size: 3rem;
		margin-bottom: 0.5rem;
	}

	.bento-small .bento-title {
		font-size: 1.25rem;
		margin-bottom: 0;
		line-height: 1.2;
	}

	/* Grid Layout Specific */
	.bento-item.bento-large {
		grid-column: span 6;
		grid-row: span 2;
		border-radius: 2.5rem !important;
	}

	/* Stats Section */
	.stats-section {
		background: white;
		padding: 4rem 0;
		border-top: 1px solid var(--gray-200);
		border-bottom: 1px solid var(--gray-200);
	}

	.stats-grid-main {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 3rem;
		text-align: center;
	}

	.stat-item-main {
		padding: 1.5rem;
	}

	.stat-item-main .stat-number {
		font-size: 2.5rem;
		font-weight: 800;
		color: var(--primary-600);
		display: block;
		margin-bottom: 0.5rem;
	}

	.stat-item-main .stat-label {
		font-size: 1rem;
		color: var(--gray-600);
		font-weight: 500;
	}

	/* Registration Section */
	.registration-section {
		background: var(--gray-900);
		color: white;
		padding: 6rem 0;
	}

	.registration-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: start;
	}

	.registration-title {
		font-size: 2.5rem;
		font-weight: 800;
		margin-bottom: 1rem;
		letter-spacing: -0.02em;
	}

	.registration-subtitle {
		font-size: 1.25rem;
		color: var(--gray-300);
		margin-bottom: 3rem;
	}

	.stats-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
		margin-bottom: 3rem;
	}

	.stat-item {
		text-align: center;
	}

	.stat-number {
		font-size: 2rem;
		font-weight: 800;
		color: #fbbf24;
		display: block;
	}

	.stat-label {
		font-size: 0.875rem;
		color: var(--gray-400);
		font-weight: 500;
	}

	.trust-badges {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
	}

	.badge {
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(10px);
		padding: 0.75rem 1rem;
		border-radius: 0.5rem;
		border: 1px solid rgba(255, 255, 255, 0.2);
	}

	.badge-text {
		font-size: 0.875rem;
		font-weight: 500;
	}

	/* Form Styles */
	.registration-form-container {
		background: white;
		padding: 3rem;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-2xl);
	}

	.form-header {
		text-align: center;
		margin-bottom: 2.5rem;
	}

	.form-header h3 {
		font-size: 1.75rem;
		font-weight: 700;
		color: var(--gray-900);
		margin-bottom: 0.5rem;
	}

	.form-header p {
		color: var(--gray-600);
		font-size: 1rem;
	}

	.form-grid {
		display: grid;
		gap: 1.5rem;
		margin-bottom: 2rem;
	}

	.form-group {
		display: flex;
		flex-direction: column;
	}

	.form-group label {
		font-weight: 600;
		color: var(--gray-700);
		margin-bottom: 0.5rem;
		font-size: 0.875rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.input-wrapper {
		position: relative;
	}

	.input-icon {
		position: absolute;
		left: 1rem;
		top: 50%;
		transform: translateY(-50%);
		color: var(--gray-400);
		pointer-events: none;
	}

	.input-wrapper input {
		width: 100%;
		padding: 1rem 1rem 1rem 3rem;
		border: 2px solid var(--gray-200);
		border-radius: 0.75rem;
		font-size: 1rem;
		background: var(--gray-50);
		transition: all 0.3s ease;
		color: var(--gray-900);
	}

	.input-wrapper input:focus {
		outline: none;
		border-color: var(--primary-500);
		background: white;
		box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
	}

	.input-wrapper input::placeholder {
		color: var(--gray-400);
	}

	.submit-button {
		width: 100%;
		background: linear-gradient(
			135deg,
			var(--primary-600),
			var(--primary-700)
		);
		color: white;
		padding: 1.25rem 2rem;
		border: none;
		border-radius: 0.75rem;
		font-size: 1.125rem;
		font-weight: 600;
		cursor: pointer;
		transition: all 0.3s ease;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.75rem;
		margin-bottom: 1rem;
	}

	.submit-button:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-xl);
		background: linear-gradient(
			135deg,
			var(--primary-700),
			var(--primary-800)
		);
	}

	.form-disclaimer {
		font-size: 0.875rem;
		color: var(--gray-500);
		text-align: center;
		line-height: 1.5;
	}

	/* Thank You Message */
	.thank-you-message {
		text-align: center;
		padding: 3rem 2rem;
		color: var(--gray-900);
	}

	.success-icon {
		color: var(--success-500);
		margin-bottom: 1.5rem;
		display: flex;
		justify-content: center;
	}

	.thank-you-message h3 {
		font-size: 1.75rem;
		font-weight: 700;
		color: var(--gray-900);
		margin-bottom: 1rem;
	}

	.thank-you-message p {
		font-size: 1rem;
		color: var(--gray-600);
		line-height: 1.6;
		max-width: 400px;
		margin: 0 auto;
	}

	/* Footer */
	.footer {
		background: #161c21;
		color: white;
		padding: 3rem 0 2rem;
	}

	.footer-content {
		display: flex;
		justify-content: space-between;
		align-items: start;
		margin-bottom: 2rem;
	}

	.footer .logo img {
		height: 60px;
		width: 140px;
		object-fit: cover;
		object-position: center;
		transform: scale(3.2);
		transform-origin: 35% center;
		overflow: hidden;
	}

	.footer-brand p {

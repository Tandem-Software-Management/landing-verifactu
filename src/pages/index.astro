---
import Layout from "../layouts/Layout.astro";
import IntegratorDark from "../assets/integratorDark.png";
---

<Layout title="VeriFactu - Tandem Software">
	<div class="page-wrapper">
		<!-- Navigation Bar -->
		<nav class="navbar">
			<div class="nav-container">
				<div class="logo">
					<img
						src="/TandemBanner.svg"
						alt="Tandem Software - Especialistas en integración con Sage"
						width="200"
						height="50"
					/>
				</div>
				<div class="nav-links">
					<a href="#evento">Evento</a>
					<a target="_blank" href="https://www.tandemsoftware.es/"

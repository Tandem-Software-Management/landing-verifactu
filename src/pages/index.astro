	import { z } from "zod";

	// Schema de validaci√≥n con Zod
	const registrationSchema = z.object({
		empresa: z
			.string()
			.min(2, "El nombre de la empresa debe tener al menos 2 caracteres")
			.max(100, "El nombre de la empresa es demasiado largo")
			.regex(
				/^[a-zA-Z√°√©√≠√≥√∫√Å√â√ç√ì√ö√±√ë√º√ú0-9\s\-.,&]+$/,
				"El nombre de la empresa contiene caracteres no v√°lidos",
			),
		nombre: z
			.string()
			.min(3, "El nombre debe tener al menos 3 caracteres")
			.max(100, "El nombre es demasiado largo")
			.regex(
				/^[a-zA-Z√°√©√≠√≥√∫√Å√â√ç√ì√ö√±√ë√º√ú\s]+$/,
				"El nombre solo puede contener letras y espacios",
			),
		email: z.email({
			pattern: z.regexes.html5Email,
			error: "Debe ser un email v√°lido",
		}),
		telefono: z
			.string()
			.min(9, "El tel√©fono debe tener al menos 9 d√≠gitos")
			.max(15, "El tel√©fono es demasiado largo")
			.regex(
				/^[\d\s\+\-\(\)]+$/,
				"El tel√©fono solo puede contener n√∫meros, espacios y s√≠mbolos + - ( )",
			),
	});

	document.addEventListener("DOMContentLoaded", () => {
		const form = document.getElementById("registrationForm");
		const thankYou = document.getElementById("thankYouMessage");
		const submitButton = document.getElementById("submitButton");
		const buttonText = submitButton.querySelector(".button-text");
		const buttonArrow = submitButton.querySelector(".button-arrow");
		const buttonSpinner = submitButton.querySelector(".button-spinner");

		if (!form || !thankYou || !submitButton) {
			console.error("Required form elements not found");
			return;
		}

		// Obtener RECAPTCHA_SITE_KEY del data attribute
		const RECAPTCHA_SITE_KEY = form.dataset.recaptchaKey;

		if (!RECAPTCHA_SITE_KEY) {
			console.error("RECAPTCHA_SITE_KEY no encontrada");
			return;
		}

		// Funci√≥n para cambiar estado del bot√≥n a "cargando"
		const setButtonLoading = (loading) => {
			if (loading) {
				submitButton.disabled = true;
				buttonText.textContent = "Enviando...";
				buttonArrow.style.display = "none";
				buttonSpinner.style.display = "block";
			} else {
				submitButton.disabled = false;
				buttonText.textContent = "Confirmar inscripci√≥n";
				buttonArrow.style.display = "block";
				buttonSpinner.style.display = "none";
			}
		};

		// Funci√≥n para mostrar errores
		const showError = (field, message) => {
			const errorElement = document.getElementById(`${field}-error`);
			const inputElement = document.getElementById(field);

			if (errorElement) {
				errorElement.textContent = message;
				errorElement.style.display = "block";
			}

			if (inputElement) {
				inputElement.classList.add("input-error");
			}
		};

		// Funci√≥n para limpiar errores
		const clearError = (field) => {
			const errorElement = document.getElementById(`${field}-error`);
			const inputElement = document.getElementById(field);

			if (errorElement) {
				errorElement.textContent = "";
				errorElement.style.display = "none";
			}

			if (inputElement) {
				inputElement.classList.remove("input-error");
			}
		};

		// Funci√≥n para limpiar todos los errores
		const clearAllErrors = () => {
			["empresa", "nombre", "email", "telefono"].forEach(clearError);
		};

		// Validaci√≥n en tiempo real (al salir del campo)
		["empresa", "nombre", "email", "telefono"].forEach((fieldName) => {
			const input = document.getElementById(fieldName);
			if (input) {
				input.addEventListener("blur", () => {
					const formData = new FormData(form);
					const data = Object.fromEntries(formData);

					try {
						// Validar solo el campo actual
						const fieldSchema = registrationSchema.shape[fieldName];
						fieldSchema.parse(data[fieldName]);
						clearError(fieldName);
					} catch (error) {
						if (error instanceof z.ZodError) {
							showError(fieldName, error.issues[0].message);
						}
					}
				});

				// Limpiar error al empezar a escribir
				input.addEventListener("input", () => {
					clearError(fieldName);
				});
			}
		});

		// Validaci√≥n al enviar el formulario
		form.addEventListener("submit", async (e) => {
			e.preventDefault();
			clearAllErrors();

			const formData = new FormData(form);
			const data = Object.fromEntries(formData);

			// Validar con Zod
			try {
				const validatedData = registrationSchema.parse(data);

				// Activar estado de carga
				setButtonLoading(true);

				// Verificar que grecaptcha est√© disponible
				if (!window.grecaptcha || !window.grecaptcha.execute) {
					console.error("reCAPTCHA no est√° cargado");
					alert(
						"Error de verificaci√≥n. Por favor, recarga la p√°gina.",
					);
					setButtonLoading(false);
					return;
				}

				// Obtener token de reCAPTCHA
				try {
					const recaptchaToken = await window.grecaptcha.execute(
						RECAPTCHA_SITE_KEY,
						{ action: "submit" },
					);

					// A√±adir token al formData
					formData.append("recaptcha_token", recaptchaToken);

					// Enviar datos validados
					const response = await fetch("/api/registro", {
						method: "POST",
						body: formData,
					});

					if (response.ok) {
						// Mantener bot√≥n deshabilitado en √©xito
						form.style.display = "none";
						thankYou.style.display = "block";
					} else {
						const responseData = await response.json();
						alert(
							responseData.message ||
								"Ocurri√≥ un error al enviar el formulario.",
						);
						setButtonLoading(false);
					}
				} catch (recaptchaError) {
					console.error("Error de reCAPTCHA:", recaptchaError);
					alert(
						"Error de verificaci√≥n. Por favor, int√©ntalo de nuevo.",
					);
					setButtonLoading(false);
				}
			} catch (error) {
				if (error instanceof z.ZodError) {
					// Mostrar todos los errores de validaci√≥n
					error.issues.forEach((err) => {
						const fieldName = err.path[0];
						showError(fieldName, err.message);
					});

					// Hacer scroll al primer error
					const firstIssue = error.issues[0];
					const firstErrorField = document.getElementById(
						firstIssue.path[0],
					);
					if (firstErrorField) {
						firstErrorField.scrollIntoView({
							behavior: "smooth",
							block: "center",
						});
						firstErrorField.focus();
					}
				} else {
					alert("Error al enviar el formulario. Int√©ntalo de nuevo.");
					console.error(error);
					setButtonLoading(false);
				}
			}
		});
	});
</script>


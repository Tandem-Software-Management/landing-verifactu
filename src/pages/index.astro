					<!-- SECCIÓN 2: Información del Header -->
					<section class="section-separated">
						<div class="section-separated-header">
							<h2 class="section-separated-title">
								Prepárate para la nueva normativa
							</h2>
						</div>
						<div class="content-grid">
							<div class="info-panel">
								<div class="panel-icon"></div>
